<?xml version="1.0" encoding="utf-8"?>
<mujoco>
    <compiler angle="radian" coordinate="local" meshdir="../stls/hand" texturedir="../textures"></compiler>
    <option timestep="0.002" iterations="50" apirate="200">
        <flag warmstart="enable" energy="enable"></flag>
    </option>
    
    <!-- 取消重力 -->
    <option gravity="0 0 -5"/>

    <include file="shared.xml"></include>
    <include file="shared_touch_sensors_92.xml"></include>

    <asset>
        <include file="shared_asset.xml"></include>
        <texture name="texture:object" file="block.png" gridsize="3 4" gridlayout=".U..LFRB.D.."></texture>
        <texture name="texture:hidden" file="block_hidden.png" gridsize="3 4" gridlayout=".U..LFRB.D.."></texture>
        <material name="material:object" texture="texture:object" specular="1" shininess="0.3" reflectance="0"></material>
        <material name="material:hidden" texture="texture:hidden" specular="1" shininess="0.3" reflectance="0"></material>
        <material name="material:target" texture="texture:object" specular="1" shininess="0.3" reflectance="0" rgba="1 1 1 0.5"></material>
    </asset>

    <worldbody>
        <geom name="floor0" pos="1 1 0" size="1 1 1" type="plane" condim="4" material="floor_mat" friction="1.2 0.1 0.1" margin="0.001"></geom>
        <body name="floor0" pos="1 1 0"></body>

        <!-- 手的基座位置，与block一致 -->
        <body name="hand_base" pos="-0.01 1.72 1.2" euler="3.14159 0 0">
            <joint name="arm:x" type="slide" axis="1 0 0" range="-0.03 0.03" limited="true" damping="0" armature="0" frictionloss="0"/>
            <joint name="arm:y" type="slide" axis="0 1 0" range="-0.03 0.03" limited="true" damping="0" armature="0" frictionloss="0"/>
            <joint name="arm:z" type="slide" axis="0 0 1" range="0.02 1.0" limited="true" damping="80" armature="0" frictionloss="0"/>
            <!-- <joint name="arm:rotz" type="hinge" axis="0 0 1"/> -->
            <include file="robot_touch_sensors_92.xml"></include>
        </body>

        <!-- egg物体，位置与block一致，形状为ellipsoid，大小与原egg一致 -->
        <body name="object" pos="1 0.87 0.03">
            <geom name="object" type="ellipsoid" size="0.03 0.03 0.04" material="material:object" condim="6" density="367" friction="3.0 0.8 0.8" margin="0.002"></geom>
            <geom name="object_hidden" type="ellipsoid" size="0.019 0.019 0.03" material="material:hidden" condim="4" contype="0" conaffinity="0" mass="0"></geom>
            <site name="object:center" pos="0 0 0" rgba="1 0 0 0" size="0.01 0.01 0.01"></site>
            <joint name="object:joint" type="free" damping="0.01"></joint>
        </body>
        <!-- egg目标，位置与block一致，形状为ellipsoid，大小与原egg一致 -->
        <body name="target" pos="1 0.87 1.2">
            <geom name="target" type="ellipsoid" size="0.03 0.03 0.04" material="material:target" condim="4" group="2" contype="0" conaffinity="0"></geom>
            <site name="target:center" pos="0 0 0" rgba="1 0 0 0" size="0.01 0.01 0.01"></site>
            <joint name="target:joint" type="free" damping="0.01"></joint>
        </body>

        <light directional="true" ambient="0.2 0.2 0.2" diffuse="0.8 0.8 0.8" specular="0.3 0.3 0.3" castshadow="false" pos="0 1 4" dir="0 0 -1" name="light0"></light>
    </worldbody>
    <actuator>
        <position name="A_arm_x" joint="arm:x" ctrlrange="-0.03 0.03" kp="200" ctrllimited="true"/>
        <position name="A_arm_y" joint="arm:y" ctrlrange="-0.03 0.03" kp="200" ctrllimited="true"/>
        <position name="A_arm_z" joint="arm:z" ctrlrange="0.02 1.8" kp="200" ctrllimited="true"/>
        <!-- <position name="A_arm_rotz" joint="arm:rotz" ctrlrange="-3.14 3.14" kp="50" ctrllimited="true"/> -->
        
    </actuator>
</mujoco>
